<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <LinearLayout
        android:paddingTop="50dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/dis_btn"
            android:layout_width="150dp"
            android:text="测距"
            android:textSize="22sp"
            android:layout_height="50dp">
        </Button>

        <Button
            android:layout_marginLeft="30dp"
            android:id="@+id/com_btn"
            android:layout_width="150dp"
            android:text="通信"
            android:textSize="22sp"
            android:layout_height="50dp">
        </Button>

    </LinearLayout>


    <LinearLayout
        android:layout_marginTop="90dp"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_height="match_parent">

        <EditText
            android:id="@+id/raw_data_txt"
            android:layout_width="350dp"
            android:layout_height="190dp"
            android:hint="在此处输入原始数据"
            android:textAlignment="center"
            android:background="@drawable/textview_border">

        </EditText>

        <EditText
            android:id="@+id/decode_data_txt"
            android:layout_marginTop="20dp"
            android:layout_width="350dp"
            android:layout_height="190dp"
            android:hint="此处将显示解码数据"
            android:textAlignment="center"
            android:background="@drawable/textview_border">

        </EditText>

        <LinearLayout
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/transmit_btn"
                android:layout_width="120dp"
                android:text="发出声波"
                android:textSize="17sp"
                android:textColor="#3E3838"
                android:background="@drawable/button_style"
                android:layout_height="40dp">

            </Button>

            <Button
                android:id="@+id/receive_btn"
                android:layout_marginLeft="30dp"
                android:layout_width="120dp"
                android:text="接收声波"
                android:textSize="17sp"
                android:textColor="#3E3838"
                android:background="@drawable/button_style"
                android:layout_height="40dp">

            </Button>

        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/encode_btn"
                android:layout_width="120dp"
                android:text="编 码"
                android:textSize="17sp"
                android:textColor="#3E3838"
                android:background="@drawable/button_style"
                android:layout_height="40dp">

            </Button>

            <Button
                android:id="@+id/decode_btn"
                android:layout_marginLeft="30dp"
                android:layout_width="120dp"
                android:text="接收停止"
                android:textSize="17sp"
                android:textColor="#3E3838"
                android:background="@drawable/button_style"
                android:layout_height="40dp">

            </Button>

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>