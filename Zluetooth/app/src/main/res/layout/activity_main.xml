<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <LinearLayout
        android:paddingTop="50dp"
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints"
        android:gravity="center"

        android:orientation="horizontal">

        <Button
            android:background="@drawable/btn_selector"
            android:textColor="#FFFEFF"
            android:id="@+id/dis_btn"
            android:layout_width="150dp"
            android:text="测距"
            android:textSize="22sp"
            android:layout_height="50dp">
        </Button>

        <Button
            android:background="@drawable/btn_selector"
            android:textColor="#FFFEFF"
            android:layout_marginLeft="30dp"
            android:id="@+id/com_btn"
            android:layout_width="150dp"
            android:text="通信"
            android:textSize="22sp"
            android:layout_height="50dp">
        </Button>

    </LinearLayout>


    <LinearLayout
        android:layout_width="513dp"
        android:layout_height="1193dp"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints">

        <EditText
            android:id="@+id/raw_data_txt"
            android:layout_width="350dp"
            android:layout_height="190dp"
            android:background="@drawable/textview_border"
            android:hint="在此处输入原始数据"
            android:textAlignment="center">
        </EditText>

        <EditText
            android:id="@+id/decode_data_txt"
            android:layout_width="350dp"
            android:layout_height="190dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/textview_border"
            android:hint="此处将显示解码数据"
            android:textAlignment="center">

        </EditText>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:background="@drawable/btn_selector"
                android:textColor="#FFFEFF"
                android:id="@+id/transmit_btn"
                android:layout_width="120dp"
                android:text="发出声波"
                android:layout_height="40dp"
                tools:ignore="ExtraText">
                android:textSize="17sp">
            </Button>

            <Button
                android:background="@drawable/btn_selector"
                android:textColor="#FFFEFF"
                android:id="@+id/receive_btn"
                android:layout_width="120dp"
                android:layout_marginLeft="30dp"
                android:text="接收声波"
                android:layout_height="40dp">
                android:textSize="17sp">

            </Button>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:background="@drawable/btn_selector"
                android:textColor="#FFFEFF"
                android:id="@+id/encode_btn"
                android:layout_width="120dp"
                android:text="编 码"
                android:layout_height="40dp">
                android:textSize="17sp">

            </Button>

            <Button
                android:background="@drawable/btn_selector"
                android:textColor="#FFFEFF"
                android:id="@+id/decode_btn"
                android:layout_width="120dp"
                android:layout_marginLeft="30dp"
                android:text="接收停止"
                android:layout_height="40dp">
                android:textSize="17sp">

            </Button>

        </LinearLayout>

        <TextView
            android:id="@+id/decode_time_consuming"
            android:layout_marginTop="20dp"
            android:layout_width="200dp"
            android:text="用时：0s"
            android:textSize="20sp"
            android:layout_height="40dp">

        </TextView>

        <TextView
            android:id="@+id/transmitting_time"
            android:layout_marginTop="20dp"
            android:layout_width="200dp"
            android:text="00:00"
            android:textSize="20sp"
            android:layout_height="40dp">

        </TextView>


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>